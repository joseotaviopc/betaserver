// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  photo    String
  lastName String
  password String
  city     String
  state    String
  height   String
  gender   String
  skills   Skills[]
}

model Skills {
  id     String  @id @default(uuid())
  skill  String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
